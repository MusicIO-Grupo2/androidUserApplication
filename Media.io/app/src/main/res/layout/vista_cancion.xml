<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100px"
    android:background="#1111">

    <ImageView
        android:id="@+id/ImagenCancion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/NombreCancion"
        android:textStyle="normal|bold"
        android:layout_toEndOf="@+id/ImagenCancion"
        android:layout_toRightOf="@+id/ImagenCancion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NombreCancion"
        android:layout_marginTop="5dp"
        android:id="@+id/NombreBanda"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ImagenCancion"
        android:layout_toRightOf="@+id/ImagenCancion" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/ReproducirCancion"
        android:layout_alignParentRight="true"
        android:src="@drawable/botonplay"/>


</RelativeLayout>